GWENDOLEN
:name: ag1 

:Initial Beliefs: 
			
hold(block)
			
:Initial Goals: 
			
empty [achieve] 

:Plans: 
+.received(:tell, B): {True} <- +B;   
+.received(:perform, G): {True} <- +!G [perform];
+.received(:achieve, G): {True} <- +!G [achieve];
			
+!empty [achieve] : {B hold(block)} <- .send(ag2, :perform, take(ag1, block)), *take(ag2, block);
+take(Ag, block) : {True} <- +empty, .send(ag2, :tell, happy);

			
:name: ag2 
			
:Initial Beliefs: 

			
:Initial Goals:

			
:Plans: 
+.received(:tell, B): {True} <- +B;   
+.received(:perform, G): {True} <- +!G [perform];
+.received(:achieve, G): {True} <- +!G [achieve];
			
+!take(Ag, block) [perform] : {True} <- .send(Ag, :tell, take(ag2, block));

+happy: {.sent(ag1, ag2,:tell, take(ag2, block))} <- +also_happy;
			